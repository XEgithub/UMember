@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UMember.Models.AdminView
@using PagedList.Mvc; 


@{
    ViewBag.Title = "Create";
}

<script>
    jQuery().ready(function ($) {
        $(".nav li:contains('管理员管理')").addClass("active");
    })

</script>



<h2>新增管理员</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>tbAdmin</legend>
        

        <div class="editor-label">
            @Html.LabelFor(model => model.Admin_Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Admin_Name)
            @Html.ValidationMessageFor(model => model.Admin_Name)
        </div>
        
        <div class="editor-label">
            选择角色
        </div>
        <div class="editor-field">
            @Html.DropDownList("Role_ID", String.Empty)
            @Html.ValidationMessageFor(model => model.Role_ID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Admin_Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Admin_Password)
            @Html.ValidationMessageFor(model => model.Admin_Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Confirm_Admin_Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Confirm_Admin_Password)
            @Html.ValidationMessageFor(model => model.Confirm_Admin_Password)
        </div>
        
        <p>
            @Html.ActionLink("取消", "Index","Admin",null,new {@class= "btn"}) <input type="submit" value="提交" class="btn btn-success" />
        </p>
    </fieldset>
}
